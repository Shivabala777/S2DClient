@model LogisticsClient.Models.Order
@{
    ViewData["Title"] = "TrackOrder";
    Layout = "~/Views/Shared/_Layout4.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Page Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <script src='main.js'></script>
    <style>
        body{
            background-image:url("~/lib/bootstrap/home2.jpg");
        }
        .container{
            width:100%;
            margin-top:250px;
            background-color:white;
            
        }
        .progressbar{
            counter-reset: step;
        }
        .progressbar li{
            list-style-type:none;
            float: left;
            width: 33.33%;
            position: relative;
            text-align: center;

        }
        .progressbar li:before{
            content: counter(step);
            counter-increment: step;
            width: 35px;
            height: 35px;
            line-height: 20px;
            border:5px solid #ddd;
            display: block;
            text-align: center;
            margin: 0 auto 10px auto;
            border-radius: 50%;
            background-color: white;

        }
        .progressbar li:after{
            content: "";
            position: absolute;
            width: 100%;
            height: 5px;
            background-color: #ddd;
            top: 15px;
            left:-50%;
            z-index:-1;
        }
        .progressbar li:first-child:after{
            content:none;
        }
        .progressbar li.active{
            color: green;

        }
        .progressbar li.active:before{
            border-color: green;
        }
        .progressbar li.active + li:after{
            background-color: green;
        }
    </style>
</head>
<body>
    <div class="container" id="cas">
        <ul class="progressbar">
            @if (Model.ApprovalStatus.Equals("not approved"))
            {
                <li>Order Approved</li>
                <li>Dispatched</li>
                <li>Delivered</li>
            }
            
            else if (Model.DeliveryStatus.Equals("OrderApproved"))
            {
                <li class="active">Order Approved</li>
                <li>Dispatched</li>
                <li>Delivered</li>
                            }
            else if(Model.DeliveryStatus.Equals("Dispatched"))
            {
                <li class="active">Order Approved</li>
                <li class="active">Dispatched</li>
                <li>Delivered</li>   

                 
            }
            else
            {
                <li class="active">Order Approved</li>
                <li class="active">Dispatched</li>
                <li class="active">Delivered</li>
                
            }
        </ul>
    </div>
    
</body>
</html>

