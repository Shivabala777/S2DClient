@inject IHttpContextAccessor Accessor;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
     <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-blue border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Customer Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="CustomerDashBoard">MyOrders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="TrackOrder">TrackOrder</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="CustomerDetails">UpdateDetails</a>
                        </li>
                       
                    </ul>
                    @if (Accessor.HttpContext.Session.GetString("Email") != null)
                    {
                        <ul class="nav navbar-nav navbar-right dummy">
                            <li class="nav-item">
                                <p class="nav-link text-dark">@Accessor.HttpContext.Session.GetString("Email").ToString()</p>
                            </li>
                                    <li class="nav-item">
                                <a class="nav-link text-dark btn-danger text-white " asp-area="" asp-controller="Home" asp-action="Index">Logout</a>
                            </li>
                        </ul>
             
                    }
                </div>
            </div>
        </nav>
    </header> 
    <div>
        @RenderBody()
    </div>
</body>
</html>
